extends template
append stylesheets
	link(rel="stylesheet" href="/stylesheets/template-header.css")
	link(rel="stylesheet" href="/stylesheets/admin-content.css")
block content
	h1
		="Album Tags"
	div(class="admin-content-wrapper")
		h2
			="Regions"
		table(class='admin-table')
			- for(var i = 0; i < locals.regions.length; i++){
				- var region = locals.regions[i].split(' ').join('-');
				tr
					td(class='list-name')
						=locals.regions[i]
					td
						img(class='tag-image' src="/images/tagPhotos/" + region + ".jpg")
					td
						a(href="/adminAlbumTags/deleteTag/regions/#{region}")="Delete"
			- }
		h2
			="Categories"
		table(class='admin-table')
			- for(var i = 0; i < locals.categories.length; i++){
				- var category = locals.categories[i].split(' ').join('-');
				tr
					td(class='list-name')
						=locals.categories[i]
					td
						img(class='tag-image' src="/images/tagPhotos/" + category + ".jpg")
					td
						a(href="/adminAlbumTags/deleteTag/categories/#{category}")="Delete"
			- }
		h2
			="Countries"
		table(class='admin-table')
			- for(var i = 0; i < locals.countries.length; i++){
				- var country = locals.countries[i].split(' ').join('-');
				tr
					td(class='list-name')
						=locals.countries[i]
					td
						img(class='tag-image' src="/images/tagPhotos/" + country + ".jpg")
					td
						a(href="/adminAlbumTags/deleteTag/countries/#{country}")="Delete"
			- }