							a(href="#") About
						li(class="menu-left")
							a(href="#") Regions <span class="arrow">&#x25BD;</span>
							
							ul(class="dropdown-content regions")
									li 
										a(href="/south-america") South America 
									li
										a(href="#") North and Central America
									li
										a(href="#") East Asia
									li
										a(href="#") South East Asia
									li
										a(href="#") South Asia
									li
										a(href="#") East Africa

						li(class="menu-left")
							a(href="#") Categories <span class="arrow">&#x25BD;</span>
							ul(class="dropdown-content categories")
								li 
									a(href="#") Sights 
								li
									a(href="#") Food
								li
									a(href="#") Trains
								li
									a(href="#") Journal
								li
									a(href="#") Soccer
								li
									a(href="#") Cities
						li(class="menu-right")
							<span class="search-icon"><a href="#"><i class="material-icons">search</i></a></span>
							input(type="text" name="search" placeholder="Search...")
